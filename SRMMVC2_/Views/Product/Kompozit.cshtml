


<table id="tblproduct3" class="table table-hover">
    <thead>
        <tr>
            <th>Ürün Kodu</th>
            <th>Ürün Adı</th>
            <th>Stok(Adet)</th>
            <th>Stok(m<sup>2</sup>)</th>
            <th>Alış Fiyatı</th>
            <th>Satış Fiyatı</th>
            <th>Görsel</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            if (i.CategoryId == 4)
            {
                <tr>
                    <td>@i.ProductCode</td>
                    <td>@i.ProductName</td>
                    <td>@i.Stock</td>   
                    <td>@i.Tmt</td> 
                    <td>@i.Pprice</td>
                    <td>@i.Sprice</td>
                    <td>@i.Image</td>
                    <td><button onclick="confirmDelete(@i.ProductId)" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button></td>
                    <td><a href="/Product/GetProduct/@i.ProductId" class="btn btn-success" style="background-color: coral"><i class="fas fa-pen-alt"></i></a></td>
                </tr>
            }
        }
    </tbody>
</table>

