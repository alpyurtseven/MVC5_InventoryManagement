@using SRMMVC2_.Models.Classes
@model List<InvoiceP>
@{
    ViewBag.Title = "DetailInvoice";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<a class="btn btn-primary" style="color: white; float: right; margin-bottom: 10px;">Yazdır</a>
<table id="tbldetail" class=" table-bordered" style="width: 100%; text-align: center">
    <thead>
        <tr>
            <th>Ürün</th>
            <th>Açıklama</th>
            <th>Adet</th>
            <th>Birim Fiyat</th>
            <th>Toplam Fiyat</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td style="padding-left: 20px; text-align: left;">@k.Products.ProductName</td>
                <td>@k.PDescp</td>
                <td>@k.Quantity</td>
                <td>@k.UnitPrice</td>
                <td>@k.Price</td>
            </tr>

        }
    </tbody>
</table>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css"></link>
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>

